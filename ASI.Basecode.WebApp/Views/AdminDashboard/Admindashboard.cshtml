<script>
    const mobileNav = document.querySelector(".hamburger");
    const navbar = document.querySelector(".menubar");

    const toggleNav = () => {
        navbar.classList.toggle("active");
        mobileNav.classList.toggle("hamburger-active");
    };
    mobileNav.addEventListener("click", () => toggleNav());

    const navItems = document.querySelectorAll('.navItemA');
    const navIndicator = document.querySelector('.navIndicator');

    // Function to move the indicator
    function moveIndicator(navItem) {
        const navItemRect = navItem.getBoundingClientRect();
        const navListRect = document.querySelector('.navList').getBoundingClientRect();
        const offsetLeft = navItemRect.left - navListRect.left;
        const width = navItemRect.width;

        // Set indicator position and width
        navIndicator.style.left = `${offsetLeft}px`;
        navIndicator.style.width = `${width}px`;
    }

    // Initially position the indicator under the active item
    document.addEventListener('DOMContentLoaded', () => {
        const activeItem = document.querySelector('.navItemA.active');
        if (activeItem) moveIndicator(activeItem);
    });

    // Add event listeners to all nav items
    navItems.forEach(item => {
        item.addEventListener('click', (event) => {
            event.preventDefault();

            // Remove 'active' class from all items and add to the clicked one
            navItems.forEach(nav => nav.classList.remove('active'));
            item.classList.add('active');

            // Move the indicator under the clicked item
            moveIndicator(item);
        });
    });

    // Initialize Flatpickr on the calendar div
    flatpickr("#calendar", {
        inline: true,
        mode: "range",
        dateFormat: "Y-m-d",
        defaultDate: ["2024-09-10", "2024-09-15", "2024-10-01", "2024-10-15"],
        onChange: function (selectedDates, dateStr, instance) {
            console.log("Selected range:", dateStr);
        }
    });

    // Function to render bookings table
    function renderBookings(bookings) {
        const tbody = document.querySelector('#bookingsTable tbody');
        const tbody2 = document.querySelector('#pendingsTable tbody');
        tbody.innerHTML = ''; // Clear previous rows
        tbody2.innerHTML = ''; // Clear previous rows

        bookings.forEach((booking, index) => {
            const row = document.createElement('tr');

            row.innerHTML = `
                    <td>${booking.user}</td>
                    <td>${booking.room}</td>
                    <td>${booking.date}</td>
                    <td>${booking.no_of_people}</td>
                    <td>
                        <button onclick="editBooking(${index})" class="btn editBtn">Edit</button>
                        <button onclick="deleteBooking(${index})" class="btn deleteBtn">Delete</button>
                    </td>
                `;

            tbody.appendChild(row);
        });
    }

    function renderPendings(bookings) {
        const tbody2 = document.querySelector('#pendingsTable tbody');
        tbody2.innerHTML = ''; // Clear previous rows

        bookings.forEach((booking, index) => {
            const row = document.createElement('tr');

            row.innerHTML = `
                    <td>${booking.user}</td>
                    <td>${booking.room}</td>
                    <td>${booking.date}</td>
                    <td>
                        <button onclick="editBooking(${index})" class="btn editBtn">Edit</button>
                        <button onclick="deleteBooking(${index})" class="btn deleteBtn">Delete</button>
                    </td>
                `;

            tbody2.appendChild(row);
        });
    }

    // Show Edit Booking modal when the edit button is clicked
    function editBooking(index) {
        // Fetch the booking data for the specific booking
        const bookingData = bookings[index];

        // Populate modal fields with the booking data
        document.getElementById('bookingUserInput').value = bookingData.user;
        document.getElementById('bookingRoomInput').value = bookingData.room;
        document.getElementById('bookingDateInput').value = bookingData.date;
        document.getElementById('bookingPeopleInput').value = bookingData.no_of_people;

        // Show the modal
        const editBookingModal = new bootstrap.Modal(document.getElementById('editBookingModal'));
        editBookingModal.show();
    }

    function deleteBooking(index) {
        if (confirm(`Are you sure you want to delete the booking of ${bookings[index].user}?`)) {
            bookings.splice(index, 1);
            renderBookings(bookings); // Re-render table after deletion
        }
    }

    // Fetch bookings from JSON file
    fetch('/data/bookingsDashboard.json')
        .then(response => response.json())
        .then(data => {
            bookings = data;
            renderBookings(data);
            renderPendings(data);
        })
        .catch(error => console.error('Error fetching data:', error));

    const ctx = document.getElementById('analyticsChart')?.getContext('2d');
    if (ctx) {
        const data = {
            labels: ['Meeting Room', 'Event Venue', 'Unit', 'Apartment'],
            datasets: [{
                label: 'Bookings by Type',
                data: [40, 30, 20, 10],
                backgroundColor: ['#6848FF', '#AFAEFF', '#E6DEFF', '#F3F0FF'],
                borderWidth: 0
            }]
        };
        const config = {
            type: 'pie',
            data: data,
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        };
        const analyticsChart = new Chart(ctx, config);
    }
</script>
