@using static ASI.Basecode.Resources.Views.Screen

@{
    // Retrieve the user's role and name from the claims
    var userName = User.Identity.Name ?? User.Claims.FirstOrDefault(c => c.Type == "name")?.Value ?? "Guest";
    var userRole = User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Role)?.Value ?? "User";
    //Super Admin = 9, User = 3, Admin = 1, Staff = 2
}

@section styles {
    <style>
        .settings-icon {
            cursor: pointer;
        }

        .profile-icon {
            font-size: 1.5rem;
            cursor: pointer;
        }

        .profile-dropdown {
            display: none;
            position: absolute;
            top: 40px;
            right: 10px;
            background-color: white;
            border: 1px solid #ddd;
            padding: 10px;
            box-shadow: 0px 2px 8px rgba(0, 0, 0, 0.1);
        }

            .profile-dropdown p {
                margin-bottom: 5px;
                font-weight: bold;
            }

            .profile-dropdown button {
                width: 100%;
            }

        .settings-modal .modal-body label {
            font-weight: bold;
        }
    </style>
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MeetingRoomBookingSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MeetingRoomBookingSystem.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

    @RenderSection("styles", required: false)
</head>
<body>
    <header>
        @if (ViewBag.HideNav != true)
        {
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container">
                    @if (userRole == "1")
                    {
                        <a class="navbar-brand" asp-controller="AdminDashboard" asp-action="Admindashboard">MeetingRoomBookingSystem</a>
                    }
                    else if (userRole == "9")
                    {
                        <a class="navbar-brand" asp-controller="SuperAdmin" asp-action="Rooms">MeetingRoomBookingSystem</a>
                    }
                    else if (userRole == "3" || userRole == "2")
                    {
                        <a class="navbar-brand" asp-controller="Users" asp-action="UserDashboard">MeetingRoomBookingSystem</a>
                    }
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between align-items-center">
                        <ul class="navbar-nav flex-grow-1 align-items-center">
                            <!-- Role-specific navigation items -->
                            @if (userRole == "1")
                            {
                                <li class="nav-item">
                                    <a class="nav-link navItemA" asp-controller="AdminDashboard" asp-action="Admindashboard">Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link navItemA" asp-controller="AdminDashboard" asp-action="Rooms">Rooms</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link navItemA" asp-controller="AdminDashboard" asp-action="AdminUserDashboard">Users</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link navItemA" asp-controller="AdminDashboard" asp-action="AdminAnalytics">Analytics</a>
                                </li>
                            }
                            else if (userRole == "9")
                            {
                                <li class="nav-item">
                                    <a class="nav-link navItemA" asp-controller="SuperAdmin" asp-action="Rooms">Rooms</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link navItemA" asp-controller="SuperAdmin" asp-action="Bookings">Bookings</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link navItemA" asp-controller="SuperAdmin" asp-action="Accounts">Accounts</a>
                                </li>
                            }
                            else if (userRole == "3" || userRole == "2")
                            {
                                <li class="nav-item">
                                    <a class="nav-link navItemA" asp-controller="Users" asp-action="UserDashboard">Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link navItemA" asp-controller="Users" asp-action="UserBookings">Bookings</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link navItemA" asp-controller="Users" asp-action="UserAnalytics">Analytics</a>
                                </li>
                            }
                        </ul>
                        <!-- Settings icon and dropdown -->
                        <div class="nav-item">
                            <span class="nav-link settings-icon" data-bs-toggle="modal" data-bs-target="#settingsModal">Settings</span>
                        </div>

                        <!-- Profile icon and dropdown -->
                        <div class="nav-item position-relative">
                            <i class="bi bi-person-circle profile-icon" id="profileIcon"></i>
                            <div class="profile-dropdown" id="profileDropdown">
                                <p id="userName">@userName</p> <!-- Dynamically display the logged-in user's name -->
                                <button class="btn btn-primary mb-2" id="editProfileBtn" data-bs-toggle="modal" data-bs-target="#editProfileModal">Edit Profile</button>
                                <form asp-controller="Account" asp-action="SignOutUser" method="post" style="display:inline;">
                                    <button type="submit" id="logoutBtn" class="btn btn-danger">Logout</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        }
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Edit Profile Modal -->
    <div class="modal fade" id="editProfileModal" tabindex="-1" aria-labelledby="editProfileModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Profile</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="editProfileForm">
                        <div class="mb-3">
                            <label for="userNameInput" class="form-label">Name</label>
                            <input type="text" class="form-control" id="userNameInput" value="@userName">
                        </div>
                        <div class="mb-3">
                            <label for="userEmailInput" class="form-label">Email</label>
                            <input type="email" class="form-control" id="userEmailInput" value="john.doe@example.com">
                        </div>
                        <div class="mb-3">
                            <label for="userRoleInput" class="form-label">Role</label>
                            <input type="text" class="form-control" id="userRoleInput" value="@userRole" readonly>
                        </div>
                        <div class="mb-3">
                            <label for="resetPasswordInput" class="form-label">Reset Password</label>
                            <input type="password" class="form-control" id="resetPasswordInput">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="saveProfileBtn">Save changes</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Settings Modal -->
    <div class="modal fade" id="settingsModal" tabindex="-1" aria-labelledby="settingsModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Settings</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="settingsForm">
                        <div class="mb-3">
                            <label for="setting1" class="form-label">Setting 1</label>
                            <input type="text" class="form-control" id="setting1" placeholder="Enter setting 1">
                        </div>
                        <div class="mb-3">
                            <label for="setting2" class="form-label">Setting 2</label>
                            <input type="text" class="form-control" id="setting2" placeholder="Enter setting 2">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="saveSettingsBtn">Save changes</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Show/hide profile dropdown
            const profileIcon = document.getElementById("profileIcon");
            const profileDropdown = document.getElementById("profileDropdown");

            profileIcon.addEventListener("click", function () {
                profileDropdown.style.display = profileDropdown.style.display === "block" ? "none" : "block";
            });

            // Save profile changes
            document.getElementById("saveProfileBtn").addEventListener("click", function () {
                const name = document.getElementById("userNameInput").value;
                const email = document.getElementById("userEmailInput").value;
                const resetPassword = document.getElementById("resetPasswordInput").value;

                alert(`Profile updated: \nName: ${name}\nEmail: ${email}\nPassword: ${resetPassword}`);
                $('#editProfileModal').modal('hide'); // Close modal
            });

            // Save settings changes
            document.getElementById("saveSettingsBtn").addEventListener("click", function () {
                const setting1 = document.getElementById("setting1").value;
                const setting2 = document.getElementById("setting2").value;

                alert(`Settings saved: \nSetting 1: ${setting1}\nSetting 2: ${setting2}`);
                $('#settingsModal').modal('hide'); // Close modal
            });
        });
    </script>
</body>
</html>
