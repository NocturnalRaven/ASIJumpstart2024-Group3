        // View, Edit, and Delete functions
        function viewBooking(index) {
        alert(`Viewing booking of ${bookings[index].user}`);
        }

        function editBooking(index) {
        alert(`Editing booking of ${bookings[index].user}`);
        }

        function deleteBooking(index) {
        if (confirm(`Are you sure you want to delete the booking of ${bookings[index].user}?`)) {
        bookings.splice(index, 1);
        renderBookings(bookings); // Re-render table after deletion
        }
        }



        // Function to render Pending Cancellations table
        function renderPendingCancellations(pendingCancellations) {
        const tbody = document.querySelector('#pendingCancellationsTable tbody');
        tbody.innerHTML = ''; // Clear previous rows

        pendingCancellations.forEach((cancellation, index) => {
        const row = document.createElement('tr');

        row.innerHTML = `
        <td>${cancellation.room_name}</td>
        <td>${cancellation.style}</td>
        <td>${cancellation.date}</td>
        <td>${cancellation.duration}</td>
        `;
        tbody.appendChild(row);
        });
        }

        // Fetch Pending Cancellations data from pendingCancellations.json
        fetch('/js/data/pendingCancellations.json')
        .then(response => response.json())
        .then(data => renderPendingCancellations(data.pendingCancellations))
        .catch(error => console.error('Error fetching pending cancellations data:', error));


        // Function to render recurring bookings table
        function renderRecurringBookings(bookings) {
        const tbody = document.querySelector("#recurringBookingsTable tbody");
        tbody.innerHTML = ""; // Clear any existing table rows

        bookings.forEach(booking => {
        const row = document.createElement("tr");

        // Create table cells with booking details
        row.innerHTML = `
        <td>${booking.roomName}</td>
        <td>${booking.recurrenceType.charAt(0).toUpperCase() + booking.recurrenceType.slice(1)}</td>
        <td>${booking.startDate}</td>
        <td>${booking.endDate}</td>
        <td>${booking.startTime} - ${booking.endTime}</td>
        <td>${booking.recurrenceType === "weekly" ? booking.weekdays.join(", ") : "--"}</td>
        `;

        // Append the row to the table body
        tbody.appendChild(row);
        });
        }

        // Fetch recurring bookings data from the JSON file
        fetch('/js/data/recurringBooks.json')
        .then(response => response.json())
        .then(data => {
        renderRecurringBookings(data.recurringBookings);
        })
        .catch(error => console.error('Error fetching recurring bookings data:', error));


        function applyFilter() {
        const filterRoom = document.getElementById('filterRoom').value.toLowerCase();
        const filterDate = document.getElementById('filterDate').value;
        const filterUser = document.getElementById('filterUser').value.toLowerCase();

        // Get all rows from the table
        const rows = document.querySelectorAll('#userBookingsTable tbody tr');
        rows.forEach(row => {
        const room = row.querySelector('td:nth-child(2)').textContent.toLowerCase();
        const date = row.querySelector('td:nth-child(3)').textContent;
        const user = row.querySelector('td:nth-child(1)').textContent.toLowerCase();

        // Check if the row matches the filter criteria
        const matchesRoom = filterRoom === '' || room.includes(filterRoom);
        const matchesDate = filterDate === '' || date.includes(filterDate);
        const matchesUser = filterUser === '' || user.includes(filterUser);

        if (matchesRoom && matchesDate && matchesUser) {
        row.style.display = '';  // Show the row
        } else {
        row.style.display = 'none';  // Hide the row
        }
        });

        // Close the modal
        const filterModal = document.getElementById('filterModal');
        const modalInstance = bootstrap.Modal.getInstance(filterModal);
        modalInstance.hide();
        }
